%h2= @group.name 
.group
  %p= @group.description
  
  %ul
    - @group.users.each do |user| 
      %li= user.name 

  %table
    - @group.invoices.each do |invoice|
      %tr
        %td= invoice.name
        %td= invoice.amount
        - if invoice.due_date
          %td= invoice.due_date.to_formatted_s(:long)
          else
          end


  

