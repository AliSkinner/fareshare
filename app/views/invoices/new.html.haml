= form_for(@invoice) do |f|
  %p
    .field
      = f.label :name
      %br
      = f.text_field :name, :class => 'invoice-name'
  %p
    .field
      = f.label :description
      %br
      = f.text_area :description, :class => 'invoice-description'
  %p
    .field
      = f.collection_select(:group_id, Group.all, :id, :name, {:class=>'invoice-group'})
  %p
    .field
      = f.label :amount
      %br
      = f.text_field :amount, :class => 'invoice-amount'  
  %p
    .field
      = f.label :due_date
      %br
      = f.date_select :due_date, class => 'invoice-duedate'
  %p
    .actions
      = f.submit :class => "submit"


