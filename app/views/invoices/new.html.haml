= form_for(@invoice) do |f|
  %p
    .field
      = f.label :name
      %br
      = f.text_field :name
  %p
    .field
      = f.label :description
      %br
      = f.text_area :description
  %p
    .field
      = f.collection_select(:group_id, Group.all, :id, :name)
  %p
    .field
      = f.label :amount
      %br
      = f.text_field :amount   
  %p
    .field
      = f.label :due_date
      %br
      = f.date_select :due_date
  %p
    .actions
      = f.submit :class => "submit"


